        <div>
            {# Sélection par Famille #}
            <div class="mt-4 mr-4">
                <h3 class="text-lg font-bold mb-3">Famille</h3>
                <div class="w-48 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    {% for family in familiesCount %}
                    <a href="{{ path('family_item', { slug: family.familySlug }) }}" class="block w-full px-4 py-2 border-b border-gray-200 cursor-pointer hover:bg-gray-100 hover:text-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:border-gray-600 dark:hover:bg-gray-600 dark:hover:text-white dark:focus:ring-gray-500 dark:focus:text-white">
                    {{ family.familyName }} ({{ family.fishCount }})
                    </a>
                    {% endfor %}
                </div>
            </div>

            {# Sélection par Continent #}
            <div class="mt-4 mr-4">
                <h3 class="text-lg font-bold mb-3">Continent</h3>
                <div class="w-48 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    {% for origin in originsCount %}
                        <a href="{{ path('origin_item', { slug: origin.originSlug }) }}" class="block w-full px-4 py-2 border-b border-gray-200 cursor-pointer hover:bg-gray-100 hover:text-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:border-gray-600 dark:hover:bg-gray-600 dark:hover:text-white dark:focus:ring-gray-500 dark:focus:text-white">
                            {{ origin.originName }} ({{ origin.fishCount }})
                        </a>
                    {% endfor %}
                </div>
            </div>

            {# Filtrer en fonction des paramètres #}
            <div class="mt-4 mr-4">
                <h3 class="text-lg font-bold mb-3">Filtres</h3>
                {{ form_start(filterForm, {'method': 'GET'}) }}
                    {{ form_widget(filterForm) }}
                    <p class="text-right">
                        <button type="submit" class="px-3 py-1 ms-2 text-sm font-medium text-white bg-blue-700 rounded-lg border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Filtrer</button>
                    </p>
                {{ form_end(filterForm) }}
            </div>
        </div>