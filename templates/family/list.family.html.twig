{% extends 'base.html.twig' %}

{% block title %}Famille{% endblock %}

{% block body %}
    <div class="mt-4 w-full">
        <div>
            <h2 class="text-4xl font-bold text-center mb-3 text-blue-700 dark:text-blue-500">{{ family.name }}</h2>
        </div>
    </div>

    <div class="flex">
        {# MENU LATERAL #}
        {{ include('sidemenu.html.twig') }}

        {# FICHES POISSONS #}
        <div class="mt-4 w-full">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 p-4">

                {% for fish in fishes %}
                    {% include 'fish/card.html.twig' with {'fish': fish} %}
                {% endfor %}
                        
            </div>
        </div> 
    </div>

{% endblock %}
